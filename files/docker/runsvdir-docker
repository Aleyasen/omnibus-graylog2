PATH=/opt/graylog2/bin:/opt/graylog2/embedded/bin:/usr/local/bin:/usr/local/sbin:/bin:/sbin:/usr/bin:/usr/sbin

# enforce our own ulimits

ulimit -c 0
ulimit -d unlimited
ulimit -e 0
ulimit -f unlimited
ulimit -l 64
ulimit -m unlimited
# WARNING: increasing the global file descriptor limit increases RAM consumption on startup dramatically
ulimit -n 50000
ulimit -q 819200
ulimit -r 0
ulimit -s 10240
ulimit -t unlimited
ulimit -v unlimited
ulimit -x unlimited

# Not allowed in a Docker container, set it from the outside
#ulimit -i 62793
#ulimit -u unlimited
#echo "1000000" > /proc/sys/fs/file-max

# and our ulimit

umask 022

exec env - PATH=$PATH runsvdir -P /opt/graylog2/service 'log: ...........................................................................................................................................................................................................................................................................................................................................................................................................'
