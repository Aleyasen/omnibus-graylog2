#!/bin/sh
exec 2>&1

umask 077
export JAVA_HOME=<%= @options[:install_directory] %>/embedded/jre

exec chpst -P -U <%= node['graylog2']['user']['username'] %> -u <%= node['graylog2']['user']['username'] %> <%= @options[:install_directory] %>/web/bin/graylog2-web-interface -Dconfig.file=<%= @options[:install_directory] %>/conf/graylog2-web-interface.conf -Dhttp.port=<%= node['graylog2']['graylog2-web']['port'] %> -Dhttp.address=<%= node['graylog2']['graylog2-web']['bind'] %> -Dpidfile.path=<%= node['graylog2']['var_directory'] %>/web.pid
